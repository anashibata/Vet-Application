@model Argus.Models.Animal

<h2>Edição</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="../../Scripts/jquery-1.6.min.js" type="text/javascript"></script>
<script src="../../Scripts/jquery.maskedinput-1.3.min.js" type="text/javascript"></script>
<script src="../../Scripts/FuncoesGenericas.js" type="text/javascript"></script>

 <script type="text/javascript">
     jQuery(function () {
         $("#dt_nascimento").mask("99/99/9999");
     });
</script>

@using (Html.BeginForm("Editar", "Animal", FormMethod.Post, new { enctype = "multipart/form-data" }))

{
    @Html.ValidationSummary(true)
        @Html.TextBoxFor(model => model.CAMINHO_FOTO, new { Type = "hidden" }) 
        @Html.TextBoxFor(model => model.CODIGO, new { Type = "hidden" }) 
    
        <table>
        
        <tr>
        <td>@Html.LabelFor(model => model.NOME)</td>
        <td>@Html.TextBoxFor(model => model.NOME, new { maxlength = 60, Class = "textomediorequerido" }) @Html.ValidationMessageFor(model => model.NOME)</td>
        </tr>
        
        <tr>
        <td>@Html.LabelFor(model => model.DT_NASCIMENTO)</td>
        <td>@Html.TextBoxFor(model => model.DT_NASCIMENTO, new { id = "dt_nascimento", Class = "textopequeno" }) @Html.ValidationMessageFor(model => model.DT_NASCIMENTO)</td>
        </tr>
              
        <tr>
        <td>@Html.LabelFor(model => model.ATIVO)</td>
        <td>@Html.EditorFor(model => model.ATIVO, new { Checked = "True" }) @Html.ValidationMessageFor(model => model.ATIVO)</td>
        </tr>          
        
        <tr>
        <td>@Html.LabelFor(model => model.CODIGO_VETERINARIO, "Veterinário")</td>          
        <td>@Html.DropDownListFor(model => model.CODIGO_VETERINARIO, ViewBag.ListaVeterinario as SelectList, new { Class = "lista" }) @Html.ValidationMessageFor(model => model.CODIGO_VETERINARIO)</td>
        </tr>

        <tr>
        <td>@Html.LabelFor(model => model.CODIGO_TEMPERAMENTO, "Temperamento")</td>          
        <td>@Html.DropDownListFor(model => model.CODIGO_TEMPERAMENTO, ViewBag.ListaTemperamento as SelectList, new { Class = "lista" }) @Html.ValidationMessageFor(model => model.CODIGO_TEMPERAMENTO)</td>
        </tr>

        <tr>
        <td>@Html.LabelFor(model => model.CODIGO_COR, "Cor")</td>          
        <td>@Html.DropDownListFor(model => model.CODIGO_COR, ViewBag.ListaCor as SelectList, new { Class = "lista" }) @Html.ValidationMessageFor(model => model.CODIGO_COR)</td>
        </tr>

        <tr>
        <td>@Html.LabelFor(model => model.CODIGO_CLIENTE, "Cliente")</td>          
        <td>@Html.DropDownListFor(model => model.CODIGO_CLIENTE, ViewBag.ListaCliente as SelectList, new { Class = "listarequerida" }) @Html.ValidationMessageFor(model => model.CODIGO_CLIENTE)</td>
        </tr>

        <tr>
        <td>@Html.LabelFor(model => model.CODIGO_ESPECIE, "Espécie")</td>          
        <td>@Html.DropDownListFor(model => model.CODIGO_ESPECIE, ViewBag.ListaEspecie as SelectList, new { Class = "listarequerida" }) @Html.ValidationMessageFor(model => model.CODIGO_ESPECIE)</td>
        </tr>
              
        <tr>
        <td>@Html.LabelFor(model => model.CODIGO_ESPECIE, "Sexo")</td>          
        <td>@Html.RadioButtonFor(model => model.SEXO, "F", new { Checked = "true" })@Html.Label("Feminino") 
            @Html.RadioButtonFor(model => model.SEXO, "M")@Html.Label("Masculino") </td>
        </tr>                        
                                
        <tr>
        <td>@Html.LabelFor(model => model.OBSERVACAO)</td>      
        <td>@Html.TextAreaFor(model => model.OBSERVACAO, new { Class = "observacao" }) @Html.ValidationMessageFor(model => model.OBSERVACAO)</td>  
        </tr>       
       
        <tr>
        <td>@Html.LabelFor(model => model.CAMINHO_FOTO)</td>      
        <td><input type="file" name="file" /></td>  
        </tr> 

        </table>
        
        <p><input type="submit" value="Gravar" /></p> 
}
