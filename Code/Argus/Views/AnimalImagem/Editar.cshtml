@model Argus.Models.AnimalImagem

<h2>Edição</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="../../Scripts/jquery-1.6.min.js" type="text/javascript"></script>
<script src="../../Scripts/jquery.maskedinput-1.3.min.js" type="text/javascript"></script>
<script src="../../Scripts/FuncoesGenericas.js" type="text/javascript"></script>


@using (Html.BeginForm("Editar", "AnimalImagem", FormMethod.Post, new { enctype = "multipart/form-data" }))
{    
    @Html.TextBoxFor(model => model.CODIGO, new { Type = "hidden" })
    @Html.TextBoxFor(model => model.CODIGO_ANIMAL, new { Type = "hidden" })

    @Html.ValidationSummary(true)
        <table>

        <tr>
        <td>@Html.LabelFor(model => model.OBSERVACAO)</td>      
        <td>@Html.TextAreaFor(model => model.OBSERVACAO, new { Class = "observacao" }) @Html.ValidationMessageFor(model => model.OBSERVACAO)</td>  
        </tr>       
       
        <tr>
        <td>@Html.LabelFor(model => model.NOME_FOTO) @Html.ValidationMessageFor(model => model.NOME_FOTO)</td>      
        <td><input type="file" name="file" /></td>  
        </tr> 
        
        </table>
    
        <p> <input type="submit" value="Gravar" /> </p>
}


