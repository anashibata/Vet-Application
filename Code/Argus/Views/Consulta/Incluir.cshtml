@model Argus.Models.Consulta        

<h2>Inclusão</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="../../Scripts/jquery-1.6.min.js" type="text/javascript"></script>
<script src="../../Scripts/jquery.maskedinput-1.3.min.js" type="text/javascript"></script>
  
 <script type="text/javascript">
    $(document).ready(function () {
        $('#menu').tabify();
    });

    function Exemplo(codigo) {
        if (codigo == undefined) {
            alert('Por favor fazer a Gravação da consulta para poder registrar os produtos,serviços e exames físicos.');
            return false;
        } else
            return true;
    }
</script>

<ul id="menu">
    @Html.ActionLink("Informações da Consulta", "Editar", new { Controller = "Consulta", codigo = ViewBag.CodigoConsulta })
    @Html.ActionLink("Serviços e Produtos", "Listar", new { Controller = "ConsultaProdServ", codigoconsulta = ViewBag.CodigoConsulta }, new { onclick = "return Exemplo(" + ViewBag.CodigoConsulta+ ");" })         
    @Html.ActionLink("Exame Físico", "Listar", new { Controller = "ConsultaExameFisico", codigoconsulta = ViewBag.CodigoConsulta }, new { onclick = "return Exemplo(" + ViewBag.CodigoConsulta + ");" })         
</ul>

@using (Html.BeginForm("Incluir", "Consulta", FormMethod.Post))
{
    @Html.ValidationSummary(true)
        <table>             
         @Html.TextBoxFor(model => model.DTHR_STATUS, new { Value = ViewBag.DataAtlStatus, id = "dthr_status", Type = "hidden" }) 
            
        <tr>
        <td>@Html.LabelFor(model => model.DTHR_CONSULTA)</td>
        <td>@Html.TextBoxFor(model => model.DTHR_CONSULTA, new { Value = ViewBag.DataConsulta, ReadOnly = "readonly", Class = "textopequenorequerido" }) @Html.ValidationMessageFor(model => model.DTHR_CONSULTA)</td>
        </tr>

        <tr>
        <td>@Html.LabelFor(model => model.CODIGOTP_VISITA)</td>
        <td>@Html.DropDownListFor(model => model.CODIGOTP_VISITA, ViewBag.ListaTpVisita as SelectList, new { Class = "listarequerida" }) @Html.ValidationMessageFor(model => model.CODIGOTP_VISITA)</td>
        </tr>        

        <tr>
        <td>@Html.LabelFor(model => model.CODIGO_STATUS)</td>
        <td>@Html.DropDownListFor(model => model.CODIGO_STATUS, ViewBag.ListaStatus as SelectList, new { Class = "listarequerida" }) @Html.ValidationMessageFor(model => model.CODIGO_STATUS)</td>
        </tr>
        
        <tr>
        <td>@Html.LabelFor(model => model.CODIGO_CLIENTE, "Cliente")</td>          
        <td>@Html.DropDownListFor(model => model.CODIGO_CLIENTE, ViewBag.ListaCliente as SelectList, new { Class = "listarequerida" }) @Html.ValidationMessageFor(model => model.CODIGO_CLIENTE)</td>
        </tr>

        <tr>
        <td>@Html.LabelFor(model => model.CODIGO_ANIMAL, "Animal")</td>          
        <td>@Html.DropDownListFor(model => model.CODIGO_ANIMAL, ViewBag.ListaAnimal as SelectList, new { Class = "listarequerida" }) @Html.ValidationMessageFor(model => model.CODIGO_ANIMAL)</td>
        </tr>            
        
        <tr>
        <td>@Html.LabelFor(model => model.CODIGO_VETERINARIO, "Veterinário")</td>          
        <td>@Html.DropDownListFor(model => model.CODIGO_VETERINARIO, ViewBag.ListaVeterinario as SelectList, new { Class = "listarequerida" }) @Html.ValidationMessageFor(model => model.CODIGO_VETERINARIO)</td>
        </tr>             
                
        <tr>
        <td>@Html.LabelFor(model => model.ANAMNESE)</td>      
        <td>@Html.TextAreaFor(model => model.ANAMNESE, new { Class = "observacaorequerida" }) @Html.ValidationMessageFor(model => model.ANAMNESE)</td>  
        </tr>       
                
        <tr>
        <td>@Html.LabelFor(model => model.DIAGNOSTICO)</td>      
        <td>@Html.TextAreaFor(model => model.DIAGNOSTICO, new { Class = "observacao" }) @Html.ValidationMessageFor(model => model.DIAGNOSTICO)</td>  
        </tr>                     
                
        <tr>
        <td>@Html.LabelFor(model => model.TRATAMENTO)</td>      
        <td>@Html.TextAreaFor(model => model.TRATAMENTO, new { Class = "observacao" }) @Html.ValidationMessageFor(model => model.TRATAMENTO)</td>  
        </tr>       
       
        </table>
         
        <p><input type="submit" value="Gravar" /></p> 
}   



 


