@{
    ViewBag.Title = "Enviar Email";
}

<center>
<h2>Enviar Email</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="../../Scripts/jquery-1.6.min.js" type="text/javascript"></script>
<script src="../../Scripts/jquery.maskedinput-1.3.min.js" type="text/javascript"></script>
<script src="../../Scripts/FuncoesGenericas.js" type="text/javascript"></script>
<script src="../../Scripts/util.js" type="text/javascript"></script>


 @using (Html.BeginForm("Enviar", "Email"))
 {
        <table>
        <tr>
        <td>@Html.Label("Email:")</td>
        <td>@Html.TextBox("email", "", new { id="email", maxlength = 60, Class = "textogranderequerido" }) </td>

        </tr>
        <br />
        <tr>
        <td>@Html.Label("Assunto:")</td>
        <td> @Html.TextBox("Assunto", "", new { maxlength = 60, Class = "textogrande" })</td>
        </tr>

        <br />
        <tr>
        <td> @Html.Label("Mensagem:")</td>
        <td> @Html.TextArea("mensagem", "", new { Class = "observacaogranderequerida" }); </td>
        </tr>
        <br />

        <tr><td colspan="2"> <input type="submit" name="btnemail" value="Enviar" onclick="return IsEmail(Email.value);"/> </td></tr>

        <tr><td colspan="2">@Html.Label("Aviso:")@ViewBag.aviso</td></tr>
        </table>                  
 }
</center>

