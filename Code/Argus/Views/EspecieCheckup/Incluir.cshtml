@model Argus.Models.EspecieCheckup

<h2>Inclusão</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="../../Scripts/jquery-1.6.min.js" type="text/javascript"></script>
<script src="../../Scripts/jquery.maskedinput-1.3.min.js" type="text/javascript"></script>
<script src="../../Scripts/FuncoesGenericas.js" type="text/javascript"></script>

<script type="text/javascript">
    function SomenteNumero(num) {
        if (num < 48 || num > 57)
            return false;
    }
</script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
        <table>
        
        <tr>
        <td>@Html.LabelFor(model => model.CODIGO_ESPECIE, "Especie")</td>          
        <td>@Html.DropDownListFor(model => model.CODIGO_ESPECIE, ViewBag.ListarEspecie as SelectList, new { Class = "listarequerida"}) @Html.ValidationMessageFor(model => model.CODIGO_ESPECIE)</td>
        </tr>
        
        <tr>
        <td>@Html.LabelFor(model => model.DE)</td>
        <td>@Html.TextBoxFor(model => model.DE,new { maxlength = 3, id = "de", Class = "textopequenorequerido", OnKeyPress = "return SomenteNumero(event.keyCode)" }) @Html.ValidationMessageFor(model => model.DE)</td>
        </tr>
        
        <tr>
        <td>@Html.LabelFor(model => model.ATE)</td>
        <td>@Html.TextBoxFor(model => model.ATE, new { maxlength = 3, id = "de", Class = "textopequenorequerido", OnKeyPress = "return SomenteNumero(event.keyCode)" }) @Html.ValidationMessageFor(model => model.ATE)</td>
        </tr>
        
        <tr>
        <td>@Html.LabelFor(model => model.ATIVO)</td>
        <td>@Html.EditorFor(model => model.ATIVO, new { Checked = "True" }) @Html.ValidationMessageFor(model => model.ATIVO)</td>
        </tr>   
               
        <tr>
        <td>@Html.LabelFor(model => model.DESCRICAO)</td>      
        <td>@Html.TextAreaFor(model => model.DESCRICAO, new { Class = "observacaorequerida" }) @Html.ValidationMessageFor(model => model.DESCRICAO)</td>  
        </tr>

        </table>                  
        <p><input type="submit" value="Gravar" /></p>
    
}




