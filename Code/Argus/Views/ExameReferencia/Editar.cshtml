@model Argus.Models.ExameReferencia

<h2>Edição</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="../../Scripts/jquery-1.6.min.js" type="text/javascript"></script>
<script src="../../Scripts/jquery.maskedinput-1.3.min.js" type="text/javascript"></script>
<script src="../../Scripts/FuncoesGenericas.js" type="text/javascript"></script>

<script type="text/javascript">
    function SomenteNumero(num) {
        if (num < 48 || num > 57)
            return false;
    }
</script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
        @Html.TextBoxFor(model => model.CODIGO_ITEM, new { Type = "hidden" })
        <table>
        
        <tr>
        <td>@Html.LabelFor(model => model.CODIGO_EXAME, "Exame")</td>          
        <td>@Html.DropDownListFor(model => model.CODIGO_EXAME, ViewBag.ListaeExames as SelectList, new { Class = "listalistarequerida", Readonly="readonly" }) @Html.ValidationMessageFor(model => model.CODIGO_EXAME)</td>
        </tr>
  
        <tr>
        <td>@Html.LabelFor(model => model.DESCRICAO)</td>
        <td>@Html.TextBoxFor(model => model.DESCRICAO, new { maxlength = 60, Class = "textomediorequerido" }) @Html.ValidationMessageFor(model => model.DESCRICAO)</td>
        </tr>

        <tr>
        <td>@Html.LabelFor(model => model.UNIDADES)</td>
        <td>@Html.TextBoxFor(model => model.UNIDADES, new { Class = "textopequeno" }) @Html.ValidationMessageFor(model => model.UNIDADES)</td>
        </tr>
        
         <tr>
        <td>@Html.LabelFor(model => model.DE)</td>
        <td>@Html.TextBoxFor(model => model.DE, new { maxlength = 3, id = "de", Class = "textopequeno", OnKeyPress = "return SomenteNumero(event.keyCode)" }) @Html.ValidationMessageFor(model => model.DE)</td>
        </tr>

         <tr>
        <td>@Html.LabelFor(model => model.ATE)</td>
        <td>@Html.TextBoxFor(model => model.ATE, new { maxlength = 3, id = "ate", Class = "textopequeno", OnKeyPress = "return SomenteNumero(event.keyCode)" }) @Html.ValidationMessageFor(model => model.ATE)</td>
        </tr>             

        </table>
    
        <p> <input type="submit" value="Gravar" /> </p>
}
