@model Argus.Models.MedicinaPrev

<h2>Edição</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<head>

<script src="../../Scripts/jquery-1.6.min.js" type="text/javascript"></script>
<script src="../../Scripts/jquery.maskedinput-1.3.min.js" type="text/javascript"></script>
  
  <script type="text/javascript">
      jQuery(function () {
          $("#dt_nascimento").mask("99/99/9999");
      });

    </script>
</head>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
        <table>                
               
        <tr>
        <td>@Html.LabelFor(model => model.CODIGO_RACA, "Raça")</td>          
        <td>@Html.DropDownListFor(model => model.CODIGO_RACA, ViewBag.ListarRaca as SelectList) @Html.ValidationMessageFor(model => model.CODIGO_RACA)</td>
        </tr>
        
        <tr>
        <td>@Html.LabelFor(model => model.DESCRICAO)</td>      
        <td>@Html.TextAreaFor(model => model.DESCRICAO, new {cols = "40%" }) @Html.ValidationMessageFor(model => model.DESCRICAO)</td>  
        </tr>


        </table>
    
        <p> <input type="submit" value="Gravar" /> </p>
}

<div>
    @Html.ActionLink("Voltar", "Listar")
</div>
