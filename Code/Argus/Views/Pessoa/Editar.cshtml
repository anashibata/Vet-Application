@model Argus.Models.Pessoa

<h2>Edição</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="../../Scripts/jquery-1.6.min.js" type="text/javascript"></script>
<script src="../../Scripts/jquery.maskedinput-1.3.min.js" type="text/javascript"></script>
<script src="../../Scripts/FuncoesGenericas.js" type="text/javascript"></script>
  
 <script type="text/javascript">
     jQuery(function () {
         $("#dt_nascimento").mask("99/99/9999");
         $("#dt_cadastro").mask("99/99/9999");
     });
</script>


@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
        <table>
        
        <tr>
        <td>@Html.LabelFor(model => model.CODIGO_CIDADE, "Cidade")</td>          
        <td>@Html.DropDownListFor(model => model.CODIGO_CIDADE, ViewBag.ListarCidade as SelectList, new { Class = "lista" }) @Html.ValidationMessageFor(model => model.CODIGO_CIDADE)</td>
        </tr>

        <tr>
        <td>@Html.LabelFor(model => model.ATIVO)</td>
        <td>@Html.EditorFor(model => model.ATIVO) @Html.ValidationMessageFor(model => model.ATIVO)</td>
        </tr>  

        <tr>
        <td>@Html.LabelFor(model => model.NOME)</td>
        <td>@Html.TextBoxFor(model => model.NOME, new { Cmaxlength = 60, lass = "textomediorequerido" }) @Html.ValidationMessageFor(model => model.NOME)</td>
        </tr>

        <tr>
        <td>@Html.LabelFor(model => model.DT_NASCIMENTO)</td>
        <td>@Html.TextBoxFor(model => model.DT_NASCIMENTO, new { id = "dt_nascimento", Class = "textopequeno" }) @Html.ValidationMessageFor(model => model.DT_NASCIMENTO)</td>
        </tr>

        <tr>
        <td>@Html.LabelFor(model => model.DT_CADASTRO)</td>
        <td>@Html.TextBoxFor(model => model.DT_CADASTRO, new { id = "dt_cadastro", Class = "textopequeno", Readonly="readonly"  }) @Html.ValidationMessageFor(model => model.DT_CADASTRO)</td>
        </tr>
             
        <tr>
        <td>@Html.LabelFor(model => model.ENDERECO)</td>
        <td>@Html.TextBoxFor(model => model.ENDERECO, new { maxlength = 60, Class = "textomedio" }) @Html.ValidationMessageFor(model => model.ENDERECO)</td>
        </tr> 

        <tr>
        <td>@Html.LabelFor(model => model.ENVIAR_EMAIL)</td>
        <td>@Html.EditorFor(model => model.ENVIAR_EMAIL) @Html.ValidationMessageFor(model => model.ENVIAR_EMAIL)</td>
        </tr> 

         <tr>
        <td>@Html.LabelFor(model => model.EMAIL)</td>
        <td>@Html.TextBoxFor(model => model.EMAIL) @Html.ValidationMessageFor(model => model.EMAIL)</td>
        </tr> 
                            
        <tr>
        <td>@Html.LabelFor(model => model.OBSERVACAO)</td>      
        <td>@Html.TextAreaFor(model => model.OBSERVACAO, new { Class = "observacao" }) @Html.ValidationMessageFor(model => model.OBSERVACAO)</td>  
        </tr>                  
        
        </table>
    
        <p> <input type="submit" value="Gravar" /> </p>
}


