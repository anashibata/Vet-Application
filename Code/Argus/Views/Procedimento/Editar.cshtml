@model Argus.Models.Procedimento

<h2>Edição</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="../../Scripts/jquery-1.6.min.js" type="text/javascript"></script>
<script src="../../Scripts/jquery.maskedinput-1.3.min.js" type="text/javascript"></script>
<script src="../../Scripts/FuncoesGenericas.js" type="text/javascript"></script>


@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

        <table>

        <tr>
        <td>@Html.LabelFor(model => model.NOME)</td>
        <td colspan="2">@Html.TextBoxFor(model => model.NOME, new { maxlength = 60, Class = "textomediorequerido" }) @Html.ValidationMessageFor(model => model.NOME)</td>
        </tr>
              
        <tr rowspan="2">
        <td>@Html.LabelFor(model => model.DESCRICAO)</td>      
        <td>@Html.TextAreaFor(model => model.DESCRICAO, new {  cols = "60%", rows = "15%" }) @Html.ValidationMessageFor(model => model.DESCRICAO)</td>  

        <td align="center">Selecionar Campos<br />
           <select id="dropdown" size="11">
           <option value="0" selected="selected">[Nome do Animal]</option>
           <option value="1">[Data de nascimento Animal]</option>
           <option value="2">[Nome do Cliente]</option>
           <option value="3">[Nome do Veterinário]</option>
           <option value="4">[CRMV do Veterinário]</option>
           <option value="5">[Endereço do Cliente]</option>            
           <option value="6">[Data Atual]</option> 
           </select>
           <br/><br />
           <input type="button" value="Incluir no Procedimento"  onclick="insert(this.form.DESCRICAO,$('#dropdown option:selected').text())"> 
        </td>
        </tr>                         

        </table>
         
        <p><input type="submit" value="Gravar" /></p>   
}   






