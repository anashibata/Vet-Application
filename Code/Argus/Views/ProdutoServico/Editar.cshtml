@model Argus.Models.ProdutoServico

<h2>Edição</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="../../Scripts/jquery-1.6.min.js" type="text/javascript"></script>
<script src="../../Scripts/jquery.maskedinput-1.3.min.js" type="text/javascript"></script>
<script src="../../Scripts/FuncoesGenericas.js" type="text/javascript"></script>
  
<script type="text/javascript">
     jQuery(function () {
         $("#dt_validade").mask("99/99/9999");
     });
</script>


@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
        <table>
        
        <tr>
        <td>@Html.LabelFor(model => model.NOME)</td>
        <td>@Html.TextBoxFor(model => model.NOME, new { maxlength = 60, Class = "textomediorequerido" }) @Html.ValidationMessageFor(model => model.NOME)</td>
        </tr>
        
        <tr>
        <td>@Html.LabelFor(model => model.DT_VALIDADE)</td>
        <td>@Html.TextBoxFor(model => model.DT_VALIDADE, new {id = "dt_validade"}) @Html.ValidationMessageFor(model => model.DT_VALIDADE)</td>
        </tr>
              
        <tr>
        <td>@Html.LabelFor(model => model.ATIVO)</td>
        <td>@Html.EditorFor(model => model.ATIVO) @Html.ValidationMessageFor(model => model.ATIVO)</td>
        </tr>   
        <tr>

        <td>@Html.LabelFor(model => model.TIPO, "Tipo")</td>          
        <td>@Html.RadioButtonFor(model => model.TIPO, "S", new { Checked="true"})@Html.Label("Serviço") 
            @Html.RadioButtonFor(model => model.TIPO, "P")@Html.Label("Produto") </td>
        </tr>              
       
        </table>
    
        <p> <input type="submit" value="Gravar" /> </p>
}


