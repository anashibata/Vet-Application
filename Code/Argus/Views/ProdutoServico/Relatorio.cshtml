@model IEnumerable<Argus.Models.ProdutoServico>

@{
    WebGrid grid = new WebGrid(source: Model, selectionFieldName: "SelectedRow", rowsPerPage: 20, ajaxUpdateContainerId: "grid");
}
<center>
<h2>Relatório de Produtos e Serviços</h2>


<div id="grid">
    @grid.GetHtml(
        tableStyle: "table",
        alternatingRowStyle: "alternate",
        headerStyle: "header",
        footerStyle: "footer",
        mode: WebGridPagerModes.FirstLast | WebGridPagerModes.NextPrevious,
        firstText: "Primeiro",
        previousText: "Anterior",
        nextText: "Próximo",
        lastText: "Último",
        columns: grid.Columns(
            grid.Column("CODIGO", header: "Código", format: @<text>@item.CODIGO</text>),
            grid.Column("NOME", header: "Nome", format: @<text>@item.NOME</text>),
            grid.Column("TIPO", header: "Tipo", format: @<text>@item.TIPO</text>),
            grid.Column("DT_VALIDADE", header: "DATA", format: @<text>@{if (@item.DT_VALIDADE != null){@item.DT_VALIDADE.ToString("dd-MMM-yyyy")}}</text>)
               
        )
    )
    <br /><br />
    <form>
    <input type="button" name="imprimir" value="Imprimir" onclick="window.print();">
    </form>
    </center>
</div>