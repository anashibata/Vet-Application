@model Argus.Models.Veterinario

<h2>Inclusão</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="../../Scripts/jquery-1.6.min.js" type="text/javascript"></script>
<script src="../../Scripts/jquery.maskedinput-1.3.min.js" type="text/javascript"></script>
<script src="../../Scripts/FuncoesGenericas.js" type="text/javascript"></script>


@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
        <table>
        
        <tr>
        <td>@Html.LabelFor(model => model.CRMV)</td>
        <td>@Html.TextBoxFor(model => model.CRMV, new { maxlength = 11, Class = "textopequeno" }) @Html.ValidationMessageFor(model => model.CRMV)</td>
        </tr>
              
        <tr>
        <td>@Html.LabelFor(model => model.CODIGO_PESSOA, "Veterinário")</td>          
        <td>@Html.DropDownListFor(model => model.CODIGO_PESSOA, ViewBag.ListaPessoa as SelectList, new { Class = "listarequerida" }) @Html.ValidationMessageFor(model => model.CODIGO_PESSOA)</td>
        </tr>
                      
        </table>   
        <p><input type="submit" value="Gravar" /></p>
}


 


